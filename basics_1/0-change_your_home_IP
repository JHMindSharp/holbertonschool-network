#!/usr/bin/env bash
# This script modifies the /etc/hosts file to change the IP for localhost and facebook.com

# Replace the line for localhost in /etc/hosts with 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/' /etc/hosts

# Add a new entry for facebook.com to resolve to 8.8.8.8
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
