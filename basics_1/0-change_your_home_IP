#!/usr/bin/env bash
# This script modifies the /etc/hosts file to change the IP for localhost and facebook.com

# Replace the localhost entry with 127.0.0.2 while keeping other entries intact
sudo sed -i '/127.0.0.1/c\127.0.0.2 localhost' /etc/hosts

# Ensure facebook.com resolves to 8.8.8.8, appending if necessary
if ! grep -q "facebook.com" /etc/hosts; then
  echo -e "8.8.8.8\tfacebook.com" | sudo tee -a /etc/hosts > /dev/null
fi
